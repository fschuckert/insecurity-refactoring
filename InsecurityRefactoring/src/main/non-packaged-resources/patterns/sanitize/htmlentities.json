{
	"name":"htmlentities",	
	"type":"sanitize",
    
        "pattern_type": "expression",    
        
        "input_type" : "expression",
        "output_type": "expression",
        "output_return":true,
        "passthrough":true,
    
        "data_input":"String",
        "data_output":"String",
    
        "filters": ["\"", "&", "<", ">"],

        "generates": [
            { 
                "params": ["<c>(ENT_QUOTES)"], 
                "filters": ["\"", "&", "<", ">", "'"]
            },
            { 
                "params": ["<c>(ENT_NOQUOTES)"], 
                "filters": ["&", "<", ">"]
            },
            { 
                "params": ["<c>(ENT_COMPAT)"], 
                "filters": ["\"", "&", "<", ">"]
            }
        ],
        
    
        "code":
        [
            "<call>(htmlentities, %input, <any>())"
        ]

}
